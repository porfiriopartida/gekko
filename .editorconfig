# EditorConfig is awesome: http://EditorConfig.org
# Unifying the coding style for different editors and IDEs

; indicate this is the root of the project
root = true

###########################################################
; common
###########################################################

[*]
charset = utf-8

end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

indent_style = space
indent_size = 2

###########################################################
; markdown
###########################################################

[*.md]
trim_trailing_whitespace = false

###########################################################
; html
###########################################################

[*.html]
indent_size = 4

###########################################################
; golang
###########################################################

[*.go]
indent_style = tab
indent_size = 4
